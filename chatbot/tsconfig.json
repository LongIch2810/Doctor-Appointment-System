{
  "compilerOptions": {
    "target": "es2022", // Hoặc "esnext" để sử dụng các tính năng ES mới nhất
    "module": "NodeNext", // Hoặc "ESNext" hoặc "ES2022"
    "moduleResolution": "NodeNext", // Quan trọng cho việc giải quyết các module
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true, // Vẫn nên giữ lại, giúp tương thích tốt hơn với các thư viện CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"] /* Bao gồm tất cả các file .ts trong thư mục src */,
  "exclude": ["node_modules", "**/*.spec.ts"]
}
